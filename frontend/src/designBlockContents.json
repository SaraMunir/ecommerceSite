{
    "contentBlocks": [
        {
            "type": "text",
            "name": "Text",
            "icon": "bi bi-fonts",
            "rowSpan": 4,
            "colSpan": 6,
            "html": "<h2>Your Text Here</h2>",
            "defaultText": "Your Text Here",
            "defaultTag": "h2",
            "defaultStyles": {
                "fontSize": "24px",
                "color": "#000000",
                "textAlign": "left",
                "fontWeight": "normal",
                "fontStyle": "normal",
                "textDecoration": "none"
            },
            "styleOptions": [
                "fontSize",
                "color",
                "textAlign",
                "fontWeight",
                "fontStyle",
                "textDecoration"
            ],
            "tagOptions": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6",
                "p",
                "span",
                "div"
            ],
            "textOptions": [
                "bold",
                "italic",
                "underline",
                "strikethrough",
                "link"
            ],
            "linkOptions": [
                "link",
                "linkTarget"
            ]
        },
        {
            "type": "textBlock",
            "name": "Text Block (Advanced)",
            "icon": "bi bi-text-paragraph",
            "rowSpan": 9,
            "colSpan": 6,
             "html": "<section id=\"promo-text-1\" aria-label=\"Promotional text block\" class=\"h-100 tb-wrap\" style=\"--tb-text:#0f172a;--tb-bg:#ffffff;--tb-accent:#2563eb;background:var(--tb-bg);color:var(--tb-text);padding:24px 24px;border-radius:16px;box-shadow:0 10px 30px rgba(2,6,23,0.08);\"><h2 class=\"tb-title\" style=\"font-family:Inter,ui-sans-serif,system-ui; font-size:32px; font-weight:700; line-height:1.6; margin:0 0 6px; text-align:left;\">Sleek summer arrivals</h2><div class=\"tb-subtitle\" style=\"font-size:18px; line-height:1.6; margin:0 0 10px; text-align:left; opacity:.9;\">Hand-picked essentials for your launch</div><p class=\"tb-body\" style=\"font-size:16px; font-weight:400; line-height:1.6; margin:0 0 16px; text-align:left;\">Craft your storefront with flexible blocks, clean typography, and accessible color choices. Tweak spacing, alignment, and calls to action — then preview changes instantly.</p><a class=\"tb-btn\" href=\"/collections/new\" style=\"display:inline-flex;align-items:center;justify-content:center;padding:8px 16px;border-radius:8px;text-decoration:none;background:#2563eb;color:#fff;border:0;\">Shop now</a></section>",

            "htmlTemplate": "<section id=\"{{accessibility.htmlId}}\" aria-label=\"{{accessibility.ariaLabel}}\" class=\"h-100 tb-wrap\" style=\"--tb-text:{{colors.text}};--tb-bg:{{colors.background}};--tb-accent:{{colors.accent}};background:var(--tb-bg);color:var(--tb-text);padding:{{layout.paddingY}}px {{layout.paddingX}}px;border-radius:{{layout.borderRadius}}px;{{#if layout.shadow}}box-shadow:0 10px 30px rgba(2,6,23,0.08);{{/if}}\"><{{typography.headingLevel}} class=\"tb-title\" style=\"font-family:{{typography.fontFamily}}; font-size:{{typography.titleSize}}px; font-weight:{{typography.titleWeight}}; line-height:{{typography.lineHeight}}; margin:0 0 6px; text-align:{{typography.align}};\">{{#if flags.showTitle}}{{content.title}}{{/if}}</{{typography.headingLevel}}>{{#if flags.showSubtitle}}<div class=\"tb-subtitle\" style=\"font-size:{{typography.subtitleSize}}px; line-height:{{typography.lineHeight}}; margin:0 0 10px; text-align:{{typography.align}}; opacity:.9;\">{{content.subtitle}}</div>{{/if}}{{#if flags.showBody}}<p class=\"tb-body\" style=\"font-size:{{typography.bodySize}}px; font-weight:{{typography.bodyWeight}}; line-height:{{typography.lineHeight}}; margin:0 0 {{#if button.show}}16{{else}}0{{/if}}px; text-align:{{typography.align}};\">{{content.body}}</p>{{/if}}{{#if button.show}}<a class=\"tb-btn\" href=\"{{button.href}}\" {{#if button.openInNewTab}}target=\"_blank\" rel=\"noreferrer noopener\"{{/if}} style=\"display:inline-flex;align-items:center;justify-content:center;padding:8px 16px;border-radius:8px;text-decoration:none;{{#if (eq button.variant 'solid')}}background:{{colors.accent}};color:#fff;border:0;{{/if}}{{#if (eq button.variant 'outline')}}background:transparent;color:{{colors.text}};border:1px solid {{colors.text}};{{/if}}{{#if (eq button.variant 'ghost')}}background:transparent;color:{{colors.text}};border:0;{{/if}}\">{{button.label}}</a>{{/if}}</section>",
            "defaultStyles": {
                "width": "100%",
                "height": "auto"
            },
            "editorConfig": {
                "id": "text-block-001",
                "type": "text",
                "content": {
                "title": "Sleek summer arrivals",
                "subtitle": "Hand-picked essentials for your launch",
                "body": "Craft your storefront with flexible blocks, clean typography, and accessible color choices. Tweak spacing, alignment, and calls to action — then preview changes instantly."
                },
                "typography": {
                    "headingLevel": "h2",
                    "titleSize": 32,
                    "subtitleSize": 18,
                    "bodySize": 16,
                    "align": "left",
                    "lineHeight": 1.6,
                    "fontFamily": "Inter",
                    "titleWeight": 700,
                    "bodyWeight": 400
                },
                "colors": {
                "text": "#0f172a",
                "background": "#ffffff",
                "accent": "#2563eb"
                },
                "layout": {
                "maxWidth": "lg",
                "paddingX": 24,
                "paddingY": 24,
                "borderRadius": 16,
                "shadow": true
                },
                "button": {
                "show": true,
                "label": "Shop now",
                "href": "/collections/new",
                "variant": "solid",
                "openInNewTab": false
                },
                "flags": {
                "showTitle": true,
                "showSubtitle": true,
                "showBody": true
                },
                "accessibility": {
                "ariaLabel": "Promotional text block",
                "htmlId": "promo-text-1"
                }
            },

            "optionCatalogs": {
                "tagOptions": ["h1", "h2", "h3", "h4", "h5", "h6", "p", "span", "div"],
                "fontFamilies": ["Inter", "Montserrat", "Playfair Display", "DM Serif Display"],
                "maxWidths": ["sm", "md", "lg", "xl", "full"],
                "align": ["left", "center", "right"],
                "buttonVariants": ["solid", "outline", "ghost"],
                "titleWeights": [300, 400, 500, 600, 700, 800, 900],
                "bodyWeights": [300, 400, 500, 600, 700]
            },

            "renderHints": {
                "previewUsesEditorConfig": true,
                "supportsServerRender": true
            }
            },
